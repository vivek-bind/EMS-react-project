{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: start",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}\\frontend"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: start back",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}\\backend"
        }
    ]
}